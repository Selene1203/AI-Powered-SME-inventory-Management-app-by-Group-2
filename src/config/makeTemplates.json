          "type": "section",
          "text": {
            "type": "mrkdwn",
            "text": "üí∞ *New Sale Recorded*\n\n*Product:* {{product_name}}\n*Quantity:* {{quantity}} units\n*Amount:* ${{total_amount}}\n*Time:* {{timestamp}}"
          }
        },
        {
          "type": "context",
          "elements": [
            {
              "type": "mrkdwn",
              "text": "Sale ID: {{sale_id}} | {{business_name}}"
            }
          ]
        }
      ]
    },
    "ai_prediction": {
